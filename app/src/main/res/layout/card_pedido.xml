<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/colPedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/lblPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedido #123"
                android:textColor="#FB7348"
                android:textSize="22sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/colData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/lblData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 21/10/2021"
                android:textColor="#FB7348"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/colStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/lblEnviado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Status: Enviado"
                android:textColor="#292828"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:id="@+id/colValor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/lblTotPedido"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Total: R$ 999,99 "
                android:textColor="#292828"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lblTotItens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Itens: 5"
                android:textColor="#292828"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:id="@+id/colDetalhes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Ver detalhes"
                android:textAllCaps="true"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>