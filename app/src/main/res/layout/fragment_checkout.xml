<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressCheck"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/secondary_color"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/contDados"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:text="Dados para envio"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardElevation="8dp">

                    <EditText
                        android:id="@+id/edtCEP"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:gravity="bottom"
                        android:hint="CEP"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/edtEndereco"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:gravity="bottom"
                        android:hint="Endereço"
                        android:inputType="textPostalAddress" />

                    <EditText
                        android:id="@+id/edtNumero"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="110dp"
                        android:ems="10"
                        android:gravity="bottom"
                        android:hint="Nº"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/edtComplemento"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="110dp"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:hint="Complemento"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/edtCidade"
                        android:layout_width="280dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:gravity="bottom"
                        android:hint="Cidade"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/edtUF"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="290dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:hint="UF"
                        android:inputType="textPersonName" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:text="Produtos selecionados"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/contItensPed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:text="Valores"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_margin="16dp"
                    app:cardElevation="8dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="244dp"
                                android:layout_height="48dp"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|left"
                                android:text="Frete" />

                            <TextView
                                android:id="@+id/lblFrete"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="right|end"
                                android:gravity="center|left"
                                android:text="R$ 00,00" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="220dp"
                                android:layout_height="48dp"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|left"
                                android:text="Produto(s)" />

                            <TextView
                                android:id="@+id/lblTotProd"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|end"
                                android:gravity="center|left"
                                android:text="R$ 00,00" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="220dp"
                                android:layout_height="48dp"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|left"
                                android:text="Total"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lblVlTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="right|end"
                                android:gravity="center|left"
                                android:text="R$ 00,00"
                                android:textStyle="bold" />
                        </TableRow>

                    </TableLayout>

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="96dp"
                        android:background="?android:attr/listDivider" />

                </androidx.cardview.widget.CardView>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/extended_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="32dp"
                    android:clickable="true"
                    android:text="Finalizar compra"
                    app:icon="@drawable/ic_baseline_check_circle_24" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>